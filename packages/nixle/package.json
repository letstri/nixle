{
  "name": "nixle",
  "version": "0.2.6",
  "description": "Universal server-side architectural framework",
  "scripts": {
    "prepublishOnly": "npm run build",
    "dev": "vite",
    "build": "vite build && tsc && tsconfig-replace-paths"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/nixle.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/nixle.js",
      "require": "./dist/nixle.cjs"
    },
    "./provider": {
      "types": "./dist/provider/index.d.ts",
      "import": "./dist/provider/index.js",
      "require": "./dist/provider/index.cjs"
    }
  },
  "keywords": [
    "nixle",
    "framework",
    "server",
    "universal",
    "typescript",
    "node",
    "fastify",
    "express",
    "bun",
    "elysia",
    "server-side"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "license": "MIT",
  "homepage": "https://nixle.letstri.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/letstri/nixle.git",
    "directory": "packages/nixle"
  },
  "bugs": {
    "url": "https://github.com/letstri/nixle/issues"
  },
  "author": "Valerii Strilets <valerii.strilets@gmail.com>",
  "dependencies": {
    "dayjs": "^1.11.10",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "^5.3.2",
    "vite": "^5.0.2"
  }
}
