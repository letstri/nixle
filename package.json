{
  "name": "@nixle/app",
  "version": "0.19.3",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm -r --filter='./packages/nixle' run build && pnpm -r --filter='./packages/*' --filter='!./packages/nixle' run build",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "publish": "pnpm publish -r --filter='./packages/*'",
    "prepare": "husky install",
    "patch-versions": "tsx scripts/patch-versions.ts"
  },
  "keywords": [
    "nixle",
    "framework",
    "server",
    "universal",
    "typescript",
    "node",
    "fastify",
    "express",
    "bun",
    "elysia",
    "hono",
    "server-side"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "license": "MIT",
  "homepage": "https://nixle.letstri.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/letstri/nixle.git"
  },
  "author": {
    "name": "Valerii Strilets",
    "email": "valerii.strilets@gmail.com"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/nixle"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.11.0",
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/fs-extra": "^11.0.4",
    "fs-extra": "^11.2.0",
    "husky": "^9.0.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "elysia": "^0.8.14",
    "express": "^4.18.2",
    "fastify": "^4.25.2",
    "hono": "^3.12.8",
    "nitro": "^2.2.28",
    "nixle": "workspace:^",
    "ofetch": "^1.3.3",
    "zod": "^3.22.4"
  }
}
