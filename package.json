{
  "name": "@nixle/monorepo",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm -r --filter='./packages/nixle' run build && pnpm -r --filter='./packages/*' --filter='!./packages/nixle' run build",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "publish": "pnpm publish -r --filter='./packages/*'",
    "prepare": "husky install"
  },
  "keywords": [
    "nixle",
    "framework",
    "server",
    "universal",
    "typescript",
    "node",
    "fastify",
    "express",
    "bun",
    "elysia",
    "server-side"
  ],
  "dependencies": {
    "nixle": "workspace:^"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.0",
    "vite": "^5.0.2"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "license": "MIT",
  "homepage": "https://nixle.letstri.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/letstri/nixle"
  },
  "author": {
    "name": "Valerii Strilets",
    "email": "valerii.strilets@gmail.com"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.11.0"
}
